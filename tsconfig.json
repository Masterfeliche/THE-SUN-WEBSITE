{
  "compilerOptions": {
    "target": "es2020", // or "esnext" for the latest features
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true, // Recommended when using a bundler like Vite/Webpack
    "jsx": "react-jsx", // or "react-runtime" for newer React versions
    "baseUrl": "./src", // Optional: for absolute imports from src
    "paths": {
      "@/*": ["*"] // Optional: example path mapping
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}